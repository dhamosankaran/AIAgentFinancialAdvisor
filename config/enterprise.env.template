# Enterprise AgenticAI Configuration Template
# Copy this to .env for production use

# =============================================================================
# API KEYS (Required)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================
ENABLE_RESPONSIBLE_AI=true
ENABLE_PLUGIN_ARCHITECTURE=true
ENABLE_COMPLIANCE_CHECKING=true
BLOCK_HIGH_RISK_CONTENT=true
ENABLE_HALLUCINATION_DETECTION=true

# =============================================================================
# PLUGIN CONFIGURATION
# =============================================================================
PLUGIN_AUTO_LOAD=true
PLUGIN_DISCOVERY_PATH=./src/plugins
MCP_SERVER_AUTO_START=true
PLUGIN_HOT_RELOAD=true

# =============================================================================
# RESPONSIBLE AI SETTINGS
# =============================================================================
# Risk tolerance levels: low, medium, high, critical
MODERATION_RISK_THRESHOLD=medium
BLOCK_PII_CONTENT=true
SANITIZE_PII_CONTENT=true
ADD_FINANCIAL_DISCLAIMERS=true

# Content moderation
ENABLE_INPUT_MODERATION=true
ENABLE_OUTPUT_MODERATION=true
DETECT_JAILBREAK_ATTEMPTS=true
DETECT_INAPPROPRIATE_FINANCIAL_ADVICE=true

# =============================================================================
# COMPLIANCE SETTINGS
# =============================================================================
REQUIRE_FINANCIAL_DISCLAIMERS=true
ENABLE_SUITABILITY_ASSESSMENT=true
LOG_COMPLIANCE_EVENTS=true
REGULATORY_MODE=standard

# Required disclaimers
FINANCIAL_DISCLAIMER_1="This is not personalized financial advice"
FINANCIAL_DISCLAIMER_2="Past performance does not guarantee future results"
FINANCIAL_DISCLAIMER_3="Investment involves risk of loss"
FINANCIAL_DISCLAIMER_4="Consult with a qualified financial advisor"

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
ENABLE_USAGE_ANALYTICS=true
LOG_MODERATION_EVENTS=true
LOG_PLUGIN_EVENTS=true
HEALTH_CHECK_INTERVAL=30
ANALYTICS_RETENTION_DAYS=90

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ENABLE_API_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CORS_PROTECTION=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to production for production deployment
ENVIRONMENT=development
DEBUG_MODE=false
VERBOSE_LOGGING=true

# =============================================================================
# DATABASE AND STORAGE
# =============================================================================
# For enterprise deployment, configure database connection
# DATABASE_URL=postgresql://user:password@localhost/agentic_ai
# REDIS_URL=redis://localhost:6379

# Local storage paths
DATA_PATH=./data
LOGS_PATH=./logs
PLUGIN_CACHE_PATH=./cache/plugins

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_MARKET_DATA_SERVER_PORT=8001
MCP_AI_ANALYSIS_SERVER_PORT=8002
MCP_SERVER_TIMEOUT=30
MCP_MAX_RETRIES=3

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
PLUGIN_LOAD_TIMEOUT=10
TOOL_EXECUTION_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=50
CACHE_TTL_SECONDS=300

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Configure notification channels for admin alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_ALERTS_ENABLED=false
ADMIN_EMAIL=admin@yourcompany.com

# =============================================================================
# ENTERPRISE INTEGRATION
# =============================================================================
# Configure for enterprise systems integration
LDAP_SERVER=ldap://your-ldap-server
OAUTH_PROVIDER=azure
SSO_ENABLED=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups 